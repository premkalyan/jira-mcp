{
  "buildCommand": "npm run build",
  "rewrites": [
    {
      "source": "/api/mcp",
      "destination": "/api/mcp.js"
    },
    {
      "source": "/(.*)",
      "destination": "/api/mcp.js"
    }
  ],
  "env": {
    "REGISTRY_URL": "https://project-registry-henna.vercel.app"
  },
  "functions": {
    "api/mcp.js": {
      "maxDuration": 60
    }
  }
}
