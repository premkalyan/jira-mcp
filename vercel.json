{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/mcp",
      "dest": "/api/mcp.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/mcp.js"
    }
  ],
  "env": {
    "REGISTRY_URL": "https://project-registry-henna.vercel.app"
  },
  "functions": {
    "api/mcp.js": {
      "maxDuration": 60
    }
  }
}
